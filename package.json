    "package": "npm run build && cd dist && zip -r ../line-docs-to-mkdwn.zip ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.0",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "turndown": "^7.2.1",
    "turndown-plugin-gfm": "^1.0.2"
  }
}
