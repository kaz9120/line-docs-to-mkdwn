{
  "name": "line-docs-to-mkdwn",
  "private": true,
  "version": "1.3.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint .",
    "fmt": "biome format . --write",
