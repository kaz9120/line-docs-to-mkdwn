{
  "name": "line-docs-to-mkdwn",
  "private": true,
  "version": "1.7.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint .",
    "fmt": "biome format . --write",
    "check": "biome check . --write",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "report": "playwright show-report",
    "generate-html-report": "node scripts/generate-report.js",
    "generate:markdown": "npm run build && playwright test --config=playwright-generate.config.ts e2e/tests/generate-markdown.spec.ts",
    "validate:markdown": "npx tsx scripts/validate-markdown.ts",
    "validate:markdown:strict": "npx tsx scripts/validate-markdown.ts --strict",
    "restore:copied-at-only": "npx tsx scripts/restore-copied-at-only-changes.ts",
    "package": "npm run build && cd dist && zip -r ../line-docs-to-mkdwn.zip ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.0",
    "jsdom": "^26.1.0",
    "semver": "^7.7.3",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "turndown": "^7.2.1",
    "turndown-plugin-gfm": "^1.0.2"
  }
}
